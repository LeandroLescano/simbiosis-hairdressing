---
interface Props {
  label: string;
  variant?: 'primary' | 'secondary';
  fullWidth?: boolean;
  onClick?: string;
  class?: string;
}

const { label, variant = "primary", fullWidth, onClick } = Astro.props;
---

<button type="button" onclick={onClick} class={`button ${variant} ${fullWidth && "full-width"} ${Astro.props.class}`}>
  {label}
</button>

<style>
  .button {
    padding: 10px 20px;
    border-radius: 5px;
    cursor: pointer;
  }

  .button.primary {
    background-color: #1A1A1A;
    color: white;
  }

  .button.secondary {
    background-color: white;
	border: 1px solid #1A1A1A;
    color: #1A1A1A;
  }

  .button.full-width {
	width: 100%;
  }
</style>
