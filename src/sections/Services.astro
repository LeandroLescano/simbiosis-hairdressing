---
import Card from "@/components/Card.astro";
---

<section id="services" class="w-full py-12 md:py-24 lg:py-32">
  <div class="container px-4 md:px-6">
    <h2
      class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl text-center mb-8"
    >
      Nuestros servicios
    </h2>
    <div class="grid gap-6 lg:grid-cols-3">
      {
        [
          {
            name: "Corte de pelo",
            image: "https://picsum.photos/600/400.jpg",
          },
          {
            name: "Coloraciones",
            image: "https://picsum.photos/600/400.jpg",
          },
          {
            name: "Peinados",
            image: "https://picsum.photos/600/400.jpg",
          },
          {
            name: "Manicura",
            image: "https://picsum.photos/600/400.jpg",
          },
          {
            name: "Venta de productos",
            image: "https://picsum.photos/600/400.jpg",
          },
          {
            name: "Domicilios",
            image: "https://picsum.photos/600/400.jpg",
          },
        ].map((service) => (
          <Card class="overflow-hidden" animated>
            <img
              slot="header"
              src={service.image}
              alt={service.name}
              class="w-full h-48 object-cover"
            />
            <h3 slot="content" class="text-xl font-bold mb-2">
              {service.name}
            </h3>
          </Card>
        ))
      }
    </div>
  </div>
</section>
