---
import Card from "@/components/Card.astro";
---

<section class="w-full py-12 md:py-24 lg:py-32">
  <div class="container px-4 md:px-6">
    <h2
      class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl text-center mb-8"
    >
      Conf√≠an en nosotros
    </h2>
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
      {
        ["Sponsor 1", "Sponsor 2", "Sponsor 3", "Sponsor 4"].map((sponsor) => (
          <Card class="flex items-center justify-center h-24 bg-gray-100">
            <div slot="content" class="p-4">
              <p class="text-lg font-semibold">{sponsor}</p>
            </div>
          </Card>
        ))
      }
    </div>
  </div>
</section>
