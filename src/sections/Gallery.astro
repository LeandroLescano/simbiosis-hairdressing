---
import Card from "@/components/Card.astro";
---

<section id="gallery" class="w-full py-12 md:py-24 lg:py-32 bg-gray-100">
  <div class="container px-4 md:px-6">
    <h2
      class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl text-center mb-8"
    >
      Nuestros trabajos
    </h2>
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4">
      {
        [1, 2, 3, 4, 5, 6, 7, 8].map((item) => (
          <Card class="overflow-hidden h-auto max-w-full" animated>
            <img
              src="https://picsum.photos/600/400.jpg"
              alt={`Hairstyle ${item}`}
              class="w-full h-48 object-cover"
              slot="header"
            />
          </Card>
        ))
      }
    </div>
  </div>
</section>
